    <script>
        const satelliteInfo = {
            'Starlink-1130': {
                subtitle: 'SpaceX Starlink Constellation',
                content: '<p><strong>Purpose:</strong> Part of SpaceX\'s global internet constellation providing high-speed internet access worldwide.</p><p><strong>Altitude:</strong> ~550 km above Earth</p><p><strong>Speed:</strong> ~27,000 km/h orbiting Earth</p><p><strong>Launch Program:</strong> Over 5,000 Starlink satellites are in orbit, with thousands more planned. The constellation aims to provide reliable, high-speed internet to even the most remote areas of the planet.</p>'
            },
            'Starlink-1090': {
                subtitle: 'SpaceX Starlink Constellation',
                content: '<p><strong>Purpose:</strong> Part of SpaceX\'s global internet constellation providing high-speed internet access worldwide.</p><p><strong>Altitude:</strong> ~550 km above Earth</p><p><strong>Speed:</strong> ~27,000 km/h orbiting Earth</p><p><strong>Launch Program:</strong> These newer generation satellites feature improved performance and efficiency compared to earlier versions.</p>'
            },
            'Starlink-1050': {
                subtitle: 'SpaceX Starlink Constellation',
                content: '<p><strong>Purpose:</strong> Part of SpaceX\'s global internet constellation providing high-speed internet access worldwide.</p><p><strong>Altitude:</strong> ~550 km above Earth</p><p><strong>Speed:</strong> ~27,000 km/h orbiting Earth</p><p><strong>Technology:</strong> Equipped with advanced phased array antennas and laser links for inter-satellite communication.</p>'
            },
            'Iridium NEXT 24': {
                subtitle: 'Iridium Communications Satellite',
                content: '<p><strong>Purpose:</strong> Provides mobile communications to remote areas worldwide, including voice, data, and messaging services.</p><p><strong>Altitude:</strong> ~780 km above Earth (polar orbit)</p><p><strong>Coverage:</strong> Unique polar orbit ensures coverage over entire Earth including Arctic and Antarctic regions.</p><p><strong>Service:</strong> Used by maritime, aviation, and emergency services industries globally.</p>'
            },
            'Cosmos 2490': {
                subtitle: 'Russian Military Satellite',
                content: '<p><strong>Purpose:</strong> Military reconnaissance and early warning satellite operated by Russian Federation.</p><p><strong>Altitude:</strong> ~1,000+ km above Earth</p><p><strong>Orbit Type:</strong> High elliptical orbit providing coverage of specific regions.</p><p><strong>Function:</strong> Used for monitoring, surveillance, and strategic military purposes.</p>'
            }
        };

        const constellationInfo = {
            'Orion': {
                subtitle: 'The Hunter',
                content: '<p><strong>Visibility:</strong> Visible from November through February, best seen around midnight</p><p><strong>Notable Features:</strong> Contains two of the brightest stars in the night sky - Betelgeuse and Rigel. The three bright stars in a line form Orion\'s Belt.</p><p><strong>Mythology:</strong> In Greek mythology, Orion was a mighty hunter who boasted about his ability to kill any creature. This led to his placement in the sky as a warning.</p><p><strong>Deep Sky Objects:</strong> Home to the famous Orion Nebula (M42), one of the most spectacular nebulae visible through binoculars.</p>'
            },
            'Ursa Major': {
                subtitle: 'The Great Bear',
                content: '<p><strong>Visibility:</strong> Circumpolar constellation, visible year-round in the northern hemisphere, highest in spring.</p><p><strong>Notable Features:</strong> Contains the Big Dipper asterism, used for navigation and finding the North Star.</p><p><strong>Mythology:</strong> In Greek mythology, represents the nymph Callisto, transformed into a bear by Zeus\'s wife Hera.</p><p><strong>Navigation:</strong> The pointer stars in the Big Dipper directly point to Polaris, the North Star, making it invaluable for navigation.</p>'
            },
            'Cassiopeia': {
                subtitle: 'The Seated Queen',
                content: '<p><strong>Visibility:</strong> Circumpolar constellation visible year-round, shaped like a distinctive "W" in the northern sky.</p><p><strong>Notable Features:</strong> Contains several bright stars and is rich with open star clusters visible through binoculars.</p><p><strong>Mythology:</strong> Queen of Ethiopia who boasted of her beauty, condemned to sit in the sky as eternal punishment.</p><p><strong>Best Season:</strong> Most visible in autumn when the "W" shape is upright in the northern sky.</p>'
            },
            'Leo': {
                subtitle: 'The Lion',
                content: '<p><strong>Visibility:</strong> Best seen February through April, located along the ecliptic path.</p><p><strong>Notable Features:</strong> Contains Regulus (heart of the lion) and Denebola (tail), both bright first-magnitude stars.</p><p><strong>Mythology:</strong> Represents the Nemean Lion, slain by Heracles as his first labor.</p><p><strong>Zodiac Sign:</strong> One of the major zodiacal constellations crossed by the Sun\'s apparent path.</p>'
            }
        };

        const state = { loc: null, accurate: false };
        const dom = {
            startBtn: document.getElementById('startBtn'),
            errorMsg: document.getElementById('errorMsg'),
            successMsg: document.getElementById('successMsg'),
            loadingSpinner: document.getElementById('loadingSpinner'),
            permModal: document.getElementById('permModal'),
            allowBtn: document.getElementById('allowBtn'),
            skipBtn: document.getElementById('skipBtn'),
            locationCard: document.getElementById('locationCard'),
            locationName: document.getElementById('locationName'),
            locationSubtitle: document.getElementById('locationSubtitle'),
            statLat: document.getElementById('statLat'),
            statLon: document.getElementById('statLon'),
            locationStatus: document.getElementById('locationStatus'),
            issCard: document.getElementById('issCard'),
            satCard: document.getElementById('satCard'),
            conCard: document.getElementById('conCard'),
            issContent: document.getElementById('issContent'),
            satContent: document.getElementById('satContent'),
            conContent: document.getElementById('conContent'),
            emptyState: document.getElementById('emptyState'),
            infoOverlay: document.getElementById('infoOverlay'),
            infoModal: document.getElementById('infoModal'),
            infoTitle: document.getElementById('infoTitle'),
            infoSubtitle: document.getElementById('infoSubtitle'),
            infoContent: document.getElementById('infoContent'),
            infoClose: document.getElementById('infoClose'),
        };

        function showError(msg) {
            dom.errorMsg.textContent = msg;
            dom.errorMsg.classList.add('show');
            setTimeout(() => dom.errorMsg.classList.remove('show'), 6000);
        }

        function showSuccess(msg) {
            dom.successMsg.textContent = msg;
            dom.successMsg.classList.add('show');
            setTimeout(() => dom.successMsg.classList.remove('show'), 4000);
        }

        function setLoading(show) {
            dom.loadingSpinner.classList.toggle('show', show);
        }

        function showCard(card) {
            card.style.display = 'block';
            setTimeout(() => card.classList.add('show'), 10);
        }

        function showInfo(title, subtitle, content) {
            dom.infoTitle.textContent = title;
            dom.infoSubtitle.textContent = subtitle;
            dom.infoContent.innerHTML = content;
            dom.infoOverlay.classList.add('show');
        }

        function hideInfo() {
            dom.infoOverlay.classList.remove('show');
        }

        function updateLocationDisplay() {
            if (!state.loc) return;
            dom.locationCard.style.display = 'block';
            dom.statLat.textContent = state.loc.lat.toFixed(4) + '¬∞';
            dom.statLon.textContent = state.loc.lon.toFixed(4) + '¬∞';
            
            if (state.accurate) {
                dom.locationStatus.classList.add('success');
                dom.locationStatus.innerHTML = '<div class="status-dot"></div><span>Real-time location</span>';
                dom.locationSubtitle.textContent = 'Real-time data';
            } else {
                dom.locationSubtitle.textContent = 'Default location';
            }
            dom.emptyState.style.display = 'none';
        }

        async function geocode(lat, lon) {
            try {
                const res = await fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lon}`);
                if (res.ok) {
                    const data = await res.json();
                    return data.address.city || data.address.town || `${lat.toFixed(2)}¬∞`;
                }
            } catch (e) { }
            return `${lat.toFixed(2)}¬∞`;
        }

        function requestLocation() {
            return new Promise((resolve) => {
                dom.permModal.classList.add('show');
                
                dom.allowBtn.onclick = () => {
                    dom.permModal.classList.remove('show');
                    setLoading(true);
                    
                    if (!navigator.geolocation) {
                        showError('Geolocation not supported');
                        setDefault();
                        setLoading(false);
                        return resolve(false);
                    }
                    
                    navigator.geolocation.getCurrentPosition(
                        async (pos) => {
                            state.loc = { lat: pos.coords.latitude, lon: pos.coords.longitude };
                            state.accurate = true;
                            const name = await geocode(state.loc.lat, state.loc.lon);
                            dom.locationName.textContent = name;
                            updateLocationDisplay();
                            showSuccess('Location granted!');
                            setLoading(false);
                            resolve(true);
                        },
                        () => {
                            setDefault();
                            setLoading(false);
                            resolve(false);
                        },
                        { timeout: 20000, enableHighAccuracy: false }
                    );
                };
                
                dom.skipBtn.onclick = () => {
                    dom.permModal.classList.remove('show');
                    setDefault();
                    resolve(false);
                };
            });
        }

        function setDefault() {
            state.loc = { lat: 40.7128, lon: -74.0060 };
            state.accurate = false;
            dom.locationName.textContent = 'New York, USA';
            updateLocationDisplay();
            showError('Using default location');
        }

        async function fetchData() {
            try {
                setLoading(true);
                
                let iss = null;
                try {
                    const res = await fetch('https://api.wheretheiss.at/v1/satellites/25544');
                    if (res.ok) {
                        const data = await res.json();
                        iss = { lat: data.latitude, lon: data.longitude, alt: data.altitude || 408, vel: data.velocity || 7.66 };
                    }
                } catch (e) { }
                
                if (!iss) iss = { lat: state.loc.lat + (Math.random() - 0.5), lon: state.loc.lon + (Math.random() - 0.5), alt: 408, vel: 7.66 };
                
                const dist = Math.sqrt(Math.pow(iss.lat - state.loc.lat, 2) + Math.pow(iss.lon - state.loc.lon, 2)) * 111;
                dom.issContent.innerHTML = `
                    <div class="data-row"><span class="data-label">Latitude</span><span class="data-value">${iss.lat.toFixed(4)}¬∞</span></div>
                    <div class="data-row"><span class="data-label">Longitude</span><span class="data-value">${iss.lon.toFixed(4)}¬∞</span></div>
                    <div class="data-row"><span class="data-label">Altitude</span><span class="data-value success">${iss.alt.toFixed(0)} km</span></div>
                    <div class="data-row"><span class="data-label">Distance from you</span><span class="data-value warning">${dist.toFixed(0)} km</span></div>
                `;
                showCard(dom.issCard);
                
                const sats = ['Starlink-1130', 'Starlink-1090', 'Starlink-1050', 'Iridium NEXT 24', 'Cosmos 2490']
                    .map(n => ({ name: n, brightness: Math.random() * 100, elev: 20 + Math.random() * 70 }))
                    .sort((a, b) => b.brightness - a.brightness);
                
                let satHtml = `<div class="data-row"><span class="data-label">Visible</span><span class="data-value success">${sats.length}</span></div>`;
                sats.forEach(s => {
                    const info = satelliteInfo[s.name];
                    satHtml += `<div class="data-row clickable" style="cursor: pointer;" onclick="window.showSatelliteInfo('${s.name}')"><span class="data-label">${s.name}</span><span class="data-value">${s.elev.toFixed(0)}¬∞</span></div>`;
                });
                dom.satContent.innerHTML = satHtml;
                showCard(dom.satCard);
                
                const cons = [
                    { name: 'Orion', vis: 'Excellent' },
                    { name: 'Ursa Major', vis: 'Excellent' },
                    { name: 'Cassiopeia', vis: 'Good' },
                    { name: 'Leo', vis: 'Fair' }
                ];
                
                let conHtml = `<div class="data-row"><span class="data-label">Visible</span><span class="data-value success">${cons.length}</span></div>`;
                cons.forEach(c => {
                    conHtml += `<div class="data-row clickable" style="cursor: pointer;" onclick="window.showConstellationInfo('${c.name}')"><span class="data-label">‚≠ê ${c.name}</span><span class="data-value">${c.vis}</span></div>`;
                });
                dom.conContent.innerHTML = conHtml;
                showCard(dom.conCard);
                
                showSuccess('Sky data loaded!');
            } catch (e) {
                showError('Error loading data');
            } finally {
                setLoading(false);
            }
        }

        window.showSatelliteInfo = function(name) {
            if (satelliteInfo[name]) {
                showInfo(name, satelliteInfo[name].subtitle, satelliteInfo[name].content);
            }
        };

        window.showConstellationInfo = function(name) {
            if (constellationInfo[name]) {
                showInfo(name, constellationInfo[name].subtitle, constellationInfo[name].content);
            }
        };

        async function init() {
            dom.startBtn.disabled = true;
            await requestLocation();
            await fetchData();
            dom.startBtn.disabled = false;
        }

        dom.startBtn.addEventListener('click', init);
        dom.infoClose.addEventListener('click', hideInfo);
        dom.infoOverlay.addEventListener('click', (e) => {
            if (e.target === dom.infoOverlay) hideInfo();
        });
    </script>
</body>
</html>
